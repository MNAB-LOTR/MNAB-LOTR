<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registratie</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="header-">
      <h1 class="registration-title">Registratie</h1>
    </header>

    <main class="registration-container">
<% if (message) { %>
  <div class="message"><%= message.content %></div>
<% } %>

      
      <form action="/register" method="POST">
        <label for="naam">Gebruikersnaam<span class="required">*</span></label>
        <input type="email" id="email" name="email" required />
      
        <label for="wachtwoord">Wachtwoord<span class="required">*</span></label>
        <input type="password" id="wachtwoord" name="password" required />
      
        <label for="wachtwoord-herhalen">Herhaal wachtwoord<span class="required">*</span></label>
        <input type="password" id="wachtwoord-herhalen" name="confirmPassword" required />
      
        <button type="submit" class="button-">Account aanmaken</button>
      </form>
      

      <p class="extra-options">
        <p>Terug naar</p>
        <a href="/login">aanmelden</a>
      </p>
    </main>

    <footer class="footer">
      <p>Â© 2025 MNAB</p>
    </footer>
    <script>
      const form = document.querySelector("form");
    
      form.addEventListener("submit", function (e) {
        const password = document.querySelector("#wachtwoord").value;
        const confirmPassword = document.querySelector("#wachtwoord-herhalen").value;
        
        if (password !== confirmPassword) {
          alert("Wachtwoorden komen niet overeen.");
          e.preventDefault();
        }
      });
    </script>
    
  </body>
</html>
