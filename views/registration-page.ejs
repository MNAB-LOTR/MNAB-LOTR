<!DOCTYPE html>
<html lang="nl-BE">
  <%- include('partials/head', { 
        title: 'Registratie', 
        stylesheets: ['/css/reset.css', '/css/style.css'],
        scripts: []  
    }) %>
  <body>
    <header class="header-">
      <h1 class="registration-title">Registratie</h1>
    </header>

    <main class="registration-container">
<% if (error) { %>
  <p class="error"><%= error %></p>
<% } %> 
      <form class="registration-form" action="/register" method="POST">
        <label for="naam">E-mailadres<span class="required">*</span></label>
        <input type="email" id="email" name="email" required />
      
        <label for="wachtwoord">Wachtwoord<span class="required">*</span></label>
        <input type="password" id="wachtwoord" name="password" required />
      
        <label for="wachtwoord-herhalen">Herhaal wachtwoord<span class="required">*</span></label>
        <input type="password" id="wachtwoord-herhalen" name="confirmPassword" required />
      
        <button type="submit" class="button-">Account aanmaken</button>
      </form>
      

      <p class="extra-options">
        <p>Terug naar</p>
        <a href="/login">aanmelden</a>
      </p>
    </main>

    <footer class="footer">
      <p>Â© 2025 MNAB</p>
    </footer>
    <script>
      const form = document.querySelector("form");
    
      form.addEventListener("submit", function (e) {
        const password = document.querySelector("#wachtwoord").value;
        const confirmPassword = document.querySelector("#wachtwoord-herhalen").value;
        
        if (password !== confirmPassword) {
          alert("Wachtwoorden komen niet overeen.");
          e.preventDefault();
        }
      });
    </script>
    
  </body>
</html>
